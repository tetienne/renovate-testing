{
  "extends": [
    "config:base",
    "schedule:weekends",
    ":semanticCommitTypeAll(chore)"
  ],
  "includeForks": true,
  "branchPrefix": "renovate-",
  "onboardingBranch": "renovate-configure",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "extends": [
        "packages:eslint"
      ],
      "groupName": "eslint"
    },
    {
      "matchManagers": [
        "bundler"
      ],
      "rangeStrategy": "update-lockfile"
    }
  ],
  "circleci": {
    "fileMatch": [
      "(^|/).circleci/config.yml$",
      "(^|/).circleci/config/@root.yml$"
    ]
  }
}